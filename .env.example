# Gromit Configuration
# Copy this file to .env and fill in your values

# Hugging Face token for speaker diarization (read-only permissions)
# Get your token at: https://huggingface.co/settings/tokens
# Required permissions: read (only)
# Accept model license at: https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGING_FACE_HUB_TOKEN=

# Optional: Whisper model size
# Options: tiny, base, small, medium, large-v1, large-v2, large-v3
# Default: large-v3
WHISPER_MODEL_SIZE=large-v3

# Optional: Default language for transcription
# Use ISO 639-1 codes: en (English), uk (Ukrainian), etc.
# Default: en
DEFAULT_LANGUAGE=en

# Optional: Device preference
# Options: auto, cpu, cuda, mps
# Default: auto (automatically detects best available)
DEFAULT_DEVICE=auto

# Optional: Enable debug logging
# Default: false
DEBUG=false
